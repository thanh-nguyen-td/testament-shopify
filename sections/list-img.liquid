{% style %}
.img-wrapper {  
    width: 100%;
    height: 100%;
    overflow: hidden; 
  }
.img-zoom {
    width:100%;
    height:100%;
    transition:all 0.5s
}
.img-zoom:hover {
    transform:scale(1.1)
}
.top-grid{
    grid-template-columns: 1fr 1fr; 
    display: grid;
}
.bot-grid{
    grid-template-columns: 1fr 1fr 1fr; 
    display: grid;
}
.bot-wrap-text{
    padding: 0 30px; 
    display:flex; 
    justify-content:center;
    flex-direction:column
}

@media screen and (max-width:990px){
    .top-grid{
        grid-template-columns: 1fr; 
        display: grid;
    }
    .bot-grid{
        grid-template-columns: 1fr; 
        display: grid;
    }
    .bot-wrap-text{
        padding: 20px 30px; 
        display:flex; 
    }
}
{% endstyle %}
